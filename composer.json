{
    "name": "christopherspenn/crispy-theme",
    "description": "A high-performance, markdown-first WordPress Block Theme with built-in SEO capabilities.",
    "type": "wordpress-theme",
    "license": "MIT",
    "authors": [
        {
            "name": "Christopher S. Penn",
            "homepage": "https://christopherspenn.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "erusev/parsedown": "^1.7",
        "erusev/parsedown-extra": "^0.8"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.10",
        "wp-coding-standards/wpcs": "^3.1",
        "phpstan/phpstan": "^1.12",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "pestphp/pest": "^4.0",
        "rector/rector": "^1.2",
        "qossmic/deptrac": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "mockery/mockery": "^1.6",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "CrispyTheme\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CrispyTheme\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "analyze": "phpstan analyse --memory-limit=512M",
        "architecture": "deptrac",
        "test": "pest",
        "test:unit": "pest --group=unit",
        "test:integration": "pest --group=integration",
        "test:coverage": "pest --coverage --min=80",
        "rector": "rector process --dry-run",
        "rector:fix": "rector process",
        "quality": [
            "@lint",
            "@analyze",
            "@architecture",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
